<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/displayLinearLayout2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <!--android:adjustViewBounds="true"-->

        <RelativeLayout
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_code_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:padding="10dp"

                android:scaleType="center"
                android:textSize="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/course_code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_toRightOf="@id/course_code_text2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/give_grade"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/ic_add_circle_black_24dp"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="20dp"
                android:textStyle="italic|bold" />





            <TextView
                android:id="@+id/total_attend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:layout_below="@id/course_code2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/total_attend_value2"
                android:layout_toRightOf="@id/total_attend2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/course_code2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />



            <TextView
                android:id="@+id/class_attend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/total_attend2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/class_attend_value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_attend_value2"
                android:layout_toRightOf="@id/class_attend2"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/percentage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_attend_value2"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:scaleType="center"
                android:textSize="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/percentage_value2"
                android:layout_toRightOf="@id/percentage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/class_attend_value2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/deptName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/percentage2"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:scaleType="center"
                android:textSize="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/deptNamevalue2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/percentage_value2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"

                android:layout_toRightOf="@id/percentage2"
                android:padding="10dp"
                android:scaleType="center"
                android:textSize="10dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/deptNameField2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="center"
                android:layout_below="@id/deptName2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/deptNameFieldValue2"
                android:layout_toRightOf="@id/deptNameField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:scaleType="center"
                android:textAlignment="center"
                android:layout_below="@id/deptNamevalue2"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="20dp"
                android:textStyle="italic|bold" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>