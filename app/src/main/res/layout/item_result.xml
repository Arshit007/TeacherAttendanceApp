<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    android:id="@+id/displayLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >

        <RelativeLayout
            android:layout_gravity="start"
            android:id="@+id/result_relative"
            android:background="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"

                android:text="Course Code:"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/course_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_toRightOf="@id/course_code_text"
                android:text=""
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:layout_below="@id/course_code"
                android:text=" Course Name: "
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/category_name"
                android:layout_toRightOf="@id/course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:text=""
                android:layout_below="@id/course_code"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />


            <Spinner
                android:layout_below="@id/course_name"
                android:id="@+id/spinner_result_show"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"

                android:background="@color/white_greyish" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>