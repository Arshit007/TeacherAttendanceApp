<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pink"
    android:orientation="vertical"
    android:id="@+id/relative">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >


        <TextView
            android:id="@+id/txt"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Select Specialisation"
            android:textSize="30dp"
            />

        <Spinner
            android:layout_below="@id/txt"
            android:id="@+id/spinner_spec"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_below="@id/spinner_spec"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/blue"
            android:text="Select Semester"
            android:textSize="30dp"
            />

        <Spinner
            android:layout_below="@id/txt1"
            android:id="@+id/spinner_sem"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            />


        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/purple"
            android:layout_below="@id/spinner_sem"
            android:text="Select Course"
            android:textSize="30dp"
            />

        <Spinner
            android:layout_below="@id/txt2"
            android:id="@+id/spinner_course"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            />



        <Button
            android:id="@+id/result_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@id/spinner_course"
            android:background="#2ecc71"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
</LinearLayout>